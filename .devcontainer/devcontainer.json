{
  "name": "Create React App Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:14", // Base image with Node.js
  "context": ".",
  "dockerFile": "Dockerfile",
  "postCreateCommand": "npm install",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "dbaeumer.vscode-eslint",
    "esbenp.prettier-vscode",
    "msjsdiag.debugger-for-chrome"
  ],
  "forwardPorts": [3000],
  "remoteUser": "node",
  "runArgs": ["--init"]
}
